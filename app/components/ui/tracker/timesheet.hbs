Week Ending: {{moment-format @timesheet.weekEndingDate 'YYYY-MM-DD ddd'}}


<YetiTable @data={{this.calculatedTimesheet}} as |table|>
  <table.header as |header|>
    <header.column @prop="chargecode.name">
      Charge Code
    </header.column>
    <header.column @prop="monday">
      Monday
    </header.column>
    <header.column @prop="tuesday">
      Tuesday
    </header.column>
    <header.column @prop="wednesday">
      Wednesday
    </header.column>
    <header.column @prop="thursday">
      Thursday
    </header.column>
    <header.column @prop="friday">
      Friday
    </header.column>
    <header.column @prop="saturday">
      Saturday
    </header.column>
    <header.column @prop="sunday">
      Sunday
    </header.column>
    <header.column @prop="total">
      Total
    </header.column>
  </table.header>
  <table.body as |body timesheetRow|>
    <body.row as |row|>
      <row.cell>
        {{#if timesheetRow.chargecode.name}}
          {{timesheetRow.chargecode.name}}
        {{else}}
          <b>{{timesheetRow.chargecode}}</b>
        {{/if}}
      </row.cell>
      <row.cell>
        {{timesheet-hours value=timesheetRow.monday}}
      </row.cell>
      <row.cell>
        {{timesheet-hours value=timesheetRow.tuesday}}
      </row.cell>
      <row.cell>
        {{timesheet-hours value=timesheetRow.wednesday}}
      </row.cell>
      <row.cell>
        {{timesheet-hours value=timesheetRow.thursday}}
      </row.cell>
      <row.cell>
        {{timesheet-hours value=timesheetRow.friday}}
      </row.cell>
      <row.cell>
        {{timesheet-hours value=timesheetRow.saturday}}
      </row.cell>
      <row.cell>
        {{timesheet-hours value=timesheetRow.sunday}}
      </row.cell>
      <row.cell>
        {{timesheet-hours value=timesheetRow.total}}
      </row.cell>
    </body.row>

  </table.body>
  <table.tfoot as |foot|>
    <foot.row as |row|>

      {{#each this.dayTotals as |total|}}
        <row.cell>
          {{timesheet-hours value=total}}
        </row.cell>
      {{/each}}

    </foot.row>
  </table.tfoot>
</YetiTable>