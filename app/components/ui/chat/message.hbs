<div
    local-class="message"
  {{did-insert this.setScrollPosition this}}
>
  <div local-class="meta">
    <div local-class="user" class={{if this.isMe 'me'}}>{{@message.user.username}}</div>
    <div local-class="date">
      {{this.date}}
    </div>
  </div>
  <div local-class="text">{{@message.text}}</div>
</div>